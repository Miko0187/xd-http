{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "../build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}