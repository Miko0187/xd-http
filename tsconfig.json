{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "noImplicitAny": true,
    "strict": true,
    "outDir": "./lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["ES2022"]
  },
  "include": ["./src", ],
  "exclude": ["./test", "./node_modules", "./lib", "./test_build"]
}